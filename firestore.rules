rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Main collection path
    match /artifacts/{appId}/public/data/logs/{logId} {
      // Anyone signed in can read logs (for the Squad Feed)
      allow read: if isSignedIn();
      
      // Only the creator can create a log
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Only the creator can update (e.g., adding AI insights) 
      // OR anyone can update the 'likes' field
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );
      
      // Comments Sub-collection
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
      }
    }

    // User Settings (Private Profile Data)
    match /artifacts/{appId}/users/{userId}/settings/{settingId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
